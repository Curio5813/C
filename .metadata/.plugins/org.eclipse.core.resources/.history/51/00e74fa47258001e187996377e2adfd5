#include <stdio.h>


int n, aranhas[28], marrons[19], vermelhas[19], tam, a = 0, bol;

long long int j;

int main(){

	scanf("%d", &n);

	tam = n * 2;

	for(int i = 0; i < tam; i++){
		aranhas[i] = i + 1;

	}for(int i = 0; i < tam; i++){
		if(i < tam / 2){
			vermelhas[i] = i + 1;

		}else if(i >= tam / 2){
			vermelhas[i] = 0;
		}

	}for(int i = 0; i < tam; i++){
		if(i < tam / 2){
			marrons[i] = 0;

		}else if(i >= tam / 2){
			marrons[i] = i + 1;
		}

	}for(long long int k = n + 1; k < 10; k++){
		printf("Ok - %d\n", k);
		j = k;
		while(a < n){
			while(k <= tam){
				aranhas[k - 1] = aranhas[k];
				aranhas[k] = NULL;
				k += j;
			}for(int i = 0; i < tam; i++){
				if(aranhas[i] == 0){
					tam = i;
				}
			}k = k - tam - 1;
			a += 1;

		}tam = n * 2;
		for(int i = 0; i < tam; i++){
			if(aranhas[i] == vermelhas[i]){
				bol = 1;

			}else if(aranhas[i] != vermelhas[i]){
				bol = 0;
				break;
			}

		}if(bol == 1){
			for(int i = 0; i < tam; i++){
				aranhas[i] = i + 1;
				printf("%d ", aranhas[i]);
			}printf("\n");
			printf("%lld\n", j);
			break;

		}else if(bol == 0){
			a = 0;
		}

	}

	return 0;

}
