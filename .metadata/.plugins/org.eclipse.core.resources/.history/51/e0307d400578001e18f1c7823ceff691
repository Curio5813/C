#include <stdio.h>
#include <stdlib.h>


int main(){

	FILE *arq; int c, cont = 0;

	char *ch[10], x;

	if(arq){
		printf("Digite um caracter: ");
		x = getc(ch);
		printf("\n");
		c = fgetc(arq);
		while(c != EOF){
			if(c == ch){
				cont += 1;

			}c = fgetc(arq);

		}printf("O caracter %c apareceu %d vezes no texto", ch, cont);

	}else{

		printf("Arquivo n√£o econtrado!");

	}fclose(arq);

	return 0;

}
