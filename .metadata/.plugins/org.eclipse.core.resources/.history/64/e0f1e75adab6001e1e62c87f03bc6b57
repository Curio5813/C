#include <stdio.h>
#include <stdlib.h>


int main(){

	int n;

	while((scanf("%d", &n) != EOF)){
		long long int cont = 1, soma = 0, unissono, meio;

		long long int *notas = (long long int*)malloc(n * sizeof(long long int));

		for(long long int i = 0; i < n; i++){
			scanf("%d", &notas[i]);
		}
		int k = 0, j = n - 1, iguais = 0;
		for(long long int i = 0; i < n; i++){
			soma += notas[i];
		}
		unissono = soma / n;
		meio = n / 2;
		if(soma % n == 0){
			while(j >= k){
				if(notas[j] == unissono){
					j -= 1;
				}
				if(notas[k] == unissono){
					k += 1;
				}
				else{
					notas[k] += 1;
					notas[j] -= 1;
					cont += 1;
				}

			}
			printf("%lld\n", cont);
			free(notas);
			notas = NULL;
		}
		else{
			printf("%d\n", -1);

		}
	}

	return 0;
}
