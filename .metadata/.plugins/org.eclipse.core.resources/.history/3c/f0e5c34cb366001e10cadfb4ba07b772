#include <stdio.h>
#include <stdlib.h>
#include <string.h>


void minuscula_maiuscula(){

	char minuscula[50] = "abcdefghijklmnopqrstuvwxyz", maiuscula[50] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";

	char carct[50];

	int idx;

	printf("Digite um caracter: ");
	scanf("%s", &carct);

	for(int i = 0; i < 26; i++){
		if(carct == minuscula[i]){
			idx = i;
			break;

		}

	}printf("%s", maiuscula[idx]);

}


int main(){

	minuscula_maiuscula();

	return 0;

}
