#include <stdio.h>


int main(){

	int n, notas[10000], cont = 1, soma = 0, unissono;

	while((scanf("%d", &n) != EOF)){
		for(int i = 0; i < n; i++){
			scanf("%d", &notas[i]);
		}
		int k = 0, j = n - 1, iguais = 0;
		for(int i = 0; i < n; i++){
			soma += notas[i];
		}
		printf("%d\n", soma);
		unissono = soma / n;
		printf("%d\n", unissono);
		if(soma % n == 0){
			while(iguais == 0){
				if(notas[j] == unissono){
					j -= 1;
				}
				if(notas[k] == unissono){
					k += 1;
				}
				notas[k] += 1;
				notas[j] -= 1;
				cont += 1;
				for(int i = 1; i < n; i++) {
					if (notas[i] != notas[0]){
				        break;
				    }
					if(i == n -1){
						iguais = 1;
					}
				}
			}
			printf("%d\n", cont);
		}
		else{
			printf("%d\n", -1);

		}
	}

	return 0;
}
