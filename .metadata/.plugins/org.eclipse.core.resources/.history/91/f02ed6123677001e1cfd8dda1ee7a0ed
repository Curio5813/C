#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; int c;

	arq = fopen("arq.txt", "w");

	if(arq){
		printf("Escreva algo: ");
		c = getchar();
		fputchar(c, arq);
		while(c != '0'){
			c = getchar();
			fputchar(c, arq);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((c = fgetc(arq)) != EOF){
			printf("%c", c);

		}

	}fclose(arq);

	return 0;

}
