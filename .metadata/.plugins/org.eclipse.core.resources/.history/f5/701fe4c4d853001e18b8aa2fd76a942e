#include <stdio.h>

int maior = 0, n = 0, num;

int collatz_in_the_range(){

	for(int i = 2947905523; i <= 2964226478; i++){
		num = i;
		n = 0;
		while(num > 1){
			if(num % 2 != 0){
				num = 3 * num + 1;
		        n += 1;
			}else if(num % 2 == 0){
				num = num / 2;
				n += 1;
		    }

		 }if(n > maior){
			 maior = n;
		 }
	}printf("%d", maior);

}


int main(){
    collatz_in_the_range();

    return 0;

}
