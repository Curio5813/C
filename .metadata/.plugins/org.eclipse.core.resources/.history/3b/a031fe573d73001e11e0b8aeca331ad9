#include <stdio.h>
#include <stdlib.h>


int main(){

	int i; float r; char str[40];

	printf("Digite um numero inteiro: ");
	scanf("%d", &i);
	printf("Digite um número real: ");
	scanf("%f", &r);
	printf("Digite uma string: ");
	scanf("%s", &str);
	printf("\n");

	int *pi = &i; float *pr = &r; char *pstr = &str;

	int ti = sizeof(i); float tr = sizeof(r); char tstr = sizeof(str);

	printf("O número inteiro vale %d, seu tamanho em bytes é %d, e seu "
			"endereço de memória é %d, %d", i, ti, &i, pi);

	return 0;


}
