#include <stdio.h>


int main(){

	char anagrama[5], nome[5];

	int i, k = i, cont = 0, n1 = 0, n2 = 0, bool = 1;

	printf("Digite uma palavras: ");
	scanf("%s", anagrama);
	printf("Digite outra palavra: ");
	scanf("%s", nome);
	printf("\n");

	printf("A palavra foi %s", nome);
	printf("\n");
	printf("A outra palavra foi %s", anagrama);
	printf("\n");

	for(i = 0; i < 5; i++){
		while(k < 5){
			if(nome[n2] == anagrama[n1]){
				cont += 1;
				break;

			}k += 1;
			n1 += 1;

		}n2 = i;
		n1 = 0;
		k = 0;

	}if(cont == 5){
		return printf("É uma anagrama da palavra %s", nome);

	}if(cont != 5){
		printf("Não é um anagrama da palavra %s\n", nome);
		printf("%d", cont);

	}

	return 0;

}

