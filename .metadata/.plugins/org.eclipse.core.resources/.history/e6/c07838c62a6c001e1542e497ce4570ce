#include <stdio.h>
#include <stdlib.h>


void incrementa(int *i, float *f, char *str ){

	printf("%d %f %str", ++*i, ++*f);

}


int main(){

	int i; float f; char str[50];

	printf("Digite um número inteiro: ");
	scanf("%d", &i);
	printf("Digite um número real: ");
	scanf("%f", &f);
	printf("Digite uma string: ");
	scanf("%s", &str);
	printf("\n");

	printf("Antes de incrementar o inteiro vale %d o numero real vale %f e a string vale %s\n", i, f, str);
	printf("Seus endereços de memória são respectivamente %d %f %s\n", &i, &f, &str);

	incrementa(&i, &f, &str);

	printf("Depois de incrementar o inteiro vale %d o numero real vale %f e a string vale %s\n", i, f, str);
	printf("Seus endereços de memória são respectivamente %d %f %s\n", &i, &f, &str);

	return 0;

}
