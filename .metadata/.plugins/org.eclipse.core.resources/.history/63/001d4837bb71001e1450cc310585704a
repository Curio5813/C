#include <stdio.h>
#include <stdlib.h>


int somando_arrays(int *v1, int *v2, int *tam1, int *tam2){

	int v3[10];

	for(int i = 0; i < *(tam1); i++){

		v3[i] = v1[i] + v2[i];
		printf("%d ", v3[i]);

	}

}


int main(){

	int v1[10], v2[10], tam1, tam2;

	for(int i = 0; i < 10; i++){

		printf("Digite o %2dº número para o vetor v1: ", i + 1);
		scanf("%d", &v1[i]);
		if(v1[i] < 0){
			break;

		}

	}printf("\n");
	for(int i = 0; i < 10; i++){

		printf("Digite o %2dº número para o vetor v2: ", i + 1);
		scanf("%d", &v2[i]);
		if(v2[i] < 0){
			break;

		}

	}printf("\n");
	tam1 = sizeof(v1);
	printf(tam1);
	tam2 = sizeof(v2);

	somando_arrays(&v1, &v2, &tam1, &tam2);
	printf("\n");

	return 0;

}
