#include <stdio.h>


int fat = 1, n = 0, aprox;

double e = 0;


void EulerNumber(){

	printf("Digite um valor de aproximação do número de Euler: ");
	scanf("%d", &aprox);

	for(int i = 1; i < n; i++){
		while(n <= i){
			fat *= n;
			n += 1;
		}printf("%d", fat);
		e += 1 / (double)fat;
		fat = 1;
		n = 1;



	}printf("O número de Euler é aproximadamente %lf", e);

}


int main(){

	EulerNumber();

	return 0;

}
