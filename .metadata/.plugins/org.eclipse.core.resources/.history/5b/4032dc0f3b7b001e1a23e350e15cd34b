#include <stdio.h>
#include <stdlib.h>


int main(){

	FILE *arq1; FILE *arq2; FILE *arq3; char doc1[20], c;
	int i = 0;

	printf("Qual o nome do documento de saída: ");
	scanf("%s", &doc1);
	printf("\n");

	arq1 = fopen("cidades_portugal.txt", "r");
	arq2 = fopen("cidades.txt", "w");
	arq3 = fopen("populacao.txt", "w");


	if(arq1){
		c = fgetc(arq1);
		while(c != EOF){
			if(c != '1' && c != '2' && c != '3' && c != '4'
					&& c != '5' && c != '6' && c != '7' && c != '8' && c != '9'&& c != '0'){
				fputc(c, arq2);

			}if(c != 'a' && c != 'b' && c != 'c' && c != 'd'
					&& c != 'e' && c != 'f' && c != 'g' &&
					c != 'h' && c != 'i' && c != 'j' && c != 'k' &&
					c != 'l' && c != 'm' && c != 'n' && c != 'o' && c != 'p' &&
					c != 'q' && c != 'r' && c != 's' && c != 't' && c != 'u' &&
					c != 'v' && c != 'w' && c != 'x' && c != 'y' && c != 'z'){
				fputc(c, arq3);

			}c = fgetc(arq1);

		}


	}else{
		printf("Arquivo não encontrado!");

		}

	return 0;

}
