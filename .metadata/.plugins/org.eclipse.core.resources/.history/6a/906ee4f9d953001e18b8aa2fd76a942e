#include <stdio.h>

int maior = 0, n = 0, num = 2588432071;

int collatz_in_the_range(){
	while(num > 1){
		if(num % 2 != 0){
			num = 3 * num + 1;
	        n += 1;
		}else if(num % 2 == 0){
			num = num / 2;
			n += 1;
	    }
	 }printf("%d", n);

}


int main(){
    collatz_in_the_range();

    return 0;

}
