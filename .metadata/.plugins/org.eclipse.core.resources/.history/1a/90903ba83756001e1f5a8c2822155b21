#include <stdio.h>
#include <stdlib.h>

int main()
{
   int num;
   int bin[8]; // <---------------
   int i;
   char num1[32];

   printf("Digite o nÃºmero decimal para ser convertido: ");
   scanf("%d", &num);

   for (i = 7; i >= 0; i--)
   {
      if (num % 2 == 0)
         bin[i] = 0;
      else
         bin[i] = 1;
      num /= 2;
   }

   for (i = 0; i < 32; i++)
          num1 += (char) bin[i];

   for (i = 0; i < 32; i++)
       printf("%d", num1[i]);

   printf("\n");

   return 0;
}
