#include <stdio.h>
#include <stdlib.h>


void soma(v1){

	float soma, res[4];

	for(int i = 0; i < 4; i++){
		printf("%f ", v1[i]);


	}printf("O vetor soma res é:\n");
	for(int i = 0; i < tam; i++){
		printf("%f ", res[i]);

	}printf("\n");

}


int main(){

	float v1[4];

	for(int i = 0; i < 4; i++){
		printf("Digite um valor para a posição %d, do vetor: ", i);
		scanf("%f", &v1[i]);

	}

	int tam;

	tam = sizeof(v1);

	soma(v1);

	return 0;

}
