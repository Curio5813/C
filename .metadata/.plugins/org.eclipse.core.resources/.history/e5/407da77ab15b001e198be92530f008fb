#include <stdio.h>
#include <math.h>


int k, i = 1;

double x, rad, seno = 0, pi = 3.141593, fat = 1, t;


int SerieDeTaylor(){

	printf("Digite o valor de angulo em graus: ");
	scanf("%lf", &x);
	printf("\n");

	rad = (x * pi) / 180.0;

	for(k = 0; k < 5; k++){
		t = 2 * k + 1;
		while(i <= 5){
			fat *= i;
			i += 1;
		}seno += (pow(-1, k) * pow(rad, t)) / fat;


	}printf("O seno do angulo de %.1lf° é %.2lf", x, seno);

}


int main(){

	SerieDeTaylor();

	return 0;

}
