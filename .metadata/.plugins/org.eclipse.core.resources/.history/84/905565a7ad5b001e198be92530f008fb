#include <stdio.h>
#include <math.h>


int k, i = 1, fat = 1, t;

double x, rad, seno = 0, pi = 3.141593;


int SerieDeTaylor(){

	printf("Digite o valor de angulo em graus: ");
	scanf("%lf", &x);
	printf("\n");

	rad = (x * pi) / 180.0;

	for(k = 0; k < 5; k++){
		t = 2 * k + 1;
		while(fat > 1){
			fat *= t;
			t -= 1;
		seno = (pow(-1, i) * pow(x, t)) / fat;


	}printf("O seno do angulo de %.2lf° é %.5lf", x, seno);


}


int main(){

	SerieDeTaylor();

	return 0;

}
