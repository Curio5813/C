#include <stdio.h>


int main(){

	char pal[5], sub[2];

	int bol = 0;

	printf("Digite uma palavra: ");
	scanf("%s", &pal);
	printf("Digite uma sub-string: ");
	scanf("%s", &sub);
	printf("\n");

	printf("A palavra foi %s\n", pal);
	printf("A sub-string foi %s\n", sub);

	for(int i = 0; i < 5; i++){
		for(int k = 0; k < 2; k++){
			if(pal[k] == sub[k]){
				bol = 1;

			}else if(pal[k] != sub[k]){
				bol = 0;

			}

		}printf("\n");
		if(bol == 1){
			printf("A sub-string estÃ¡ contida na palavra!");
			break;

		}

	}if(bol == 0){
		printf("%d", -1);

	}

	return 0;

}

