#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; char c;

	arq = fopen("arq.txt", "w");

	if(arq){
		printf("Escreva algo? \n");
		getc(c);
		while((c = fgetc(arq)) != '0'){
			printf("Escreva algo? \n");
			getc(c);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((c = fgetc(arq)) != EOF){
			printf("%c", c);

		}

	}fclose(arq);

	return 0;

}
