#include <stdio.h>


int num, soma, resto;

int soma_digitos(){

	printf("Digite um número inteiro maior que zer: ");
	scanf("%d", num);

	if(num <= 0){

		printf("Número inválido.");

	}else if(num > 0){

		while(resto > 0){

			resto %= 10;
			soma += resto;
			num /= 10;
		}

	}

}


int main(){

	soma_digitos();

	return 0;

}
