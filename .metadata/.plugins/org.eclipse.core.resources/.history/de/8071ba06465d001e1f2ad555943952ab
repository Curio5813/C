#include <stdio.h>
#include <math.h>

int i, t, k = 1, fat = 1;

double rad, x, sen_h = 0, pi = 3.141593, a;


void seno_hiperbolico(){

	printf("Digite o valor do ângulo (em °): ");
	scanf("%lf", &x);
	printf("\n");

	rad = (x * pi) / 180.0;

	for(i = 0; i < 5; i++){
		t = 2 * i + 1;
		k = 1;
		fat = 1;
		while(k <= t){
			fat *= k;
			k += 1;
		}sen_h += pow(rad, t) / (double)fat;

	}printf("O seno hiperbólico do angulo de %.1lf° é %lf", x, sen_h);


}


int main(){

	seno_hiperbolico();

	return 0;

}

