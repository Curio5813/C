#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int media_idade(int i, int k, int *v[i][k]){

	double media, qt = 0;

	int idades = 0;

	printf("%d", v[0][0]);

	for(int i = 0; i < 5; i++){
		if(v[i][2] == "C" && v[i][3] == "P"){
			idades += v[i][0];
			qt += 1;

		}

	}media = idades / qt;
	printf("A média de idade das pessoas com olhos castnhos e cabelos pretos é de %.2lf", media);
	printf("\n");

}


int maior_idade(int i, int k, int *v[i][k]){

	int maior = 0;

	for(int i = 0; i < 5; i++){
		if(v[i][0] > maior){
			maior = v[i][0];
		}

	}printf("A pessoa de maior idade tem %d anos", maior);
	printf("\n");

}


int sexo_feminino(int i, int k, int *v[i][k]){

	int qt = 0;

	for(int i = 0; i < 5; i++){
		if(v[i][0] <= 18 && v[i][0] <= 35 && v[i][1] == 'F' && v[i][2] == 'A' && v[i][3] == 'L'){
			qt += 1;

		}

	}printf("A quantidade de mulheres com idade entre 18 à 35 anos, olhos azuis e cabelos louros é de %d", qt);
	printf("\n");
}


int main(){

	int v[5][4], i, k = 0;

	for(i = 0; i < 5; i++){
		printf("Características do %dº habitante:\n", i + 1);
		printf("Idade: ");
		scanf("%d", &v[i][k]);
		k += 1;
		printf("Sexo [M] => Masculino, [F] => Feminino: ");
		scanf("%s", &v[i][k]);
		k += 1;
		printf("Cor dos olhos [A] => Azuis, [C] => Castanhos: ");
		scanf("%s", &v[i][k]);
		k += 1;
		printf("Cor dos cabelos [L] => Louros, [P] => Pretos, [C] => Castanhos: ");
		scanf("%s", &v[i][k]);
		k += 1;
		printf("\n");

	}printf("\n");

	media_idade(i, k, v[i][k]);

	maior_idade(i, k, v[i][k]);

	sexo_feminino(i, k, v[i][k]);

	return 0;

}
