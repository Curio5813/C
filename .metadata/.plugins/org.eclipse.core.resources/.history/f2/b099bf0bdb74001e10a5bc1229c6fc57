#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; char ch[1];

	arq = fopen("arq.txt", "w");

	if(arq){
		printf("Escreva algo? ");
		fgetc(ch[0], stdin);
		while(ch[0] != '0'){
			fputc(ch, arq);
			printf("Escreva algo? ");
			fgetc(ch[0], stdin);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((ch = fgetc(arq)) != EOF){
			printf("%c", ch);

		}

	}fclose(arq);

	return 0;

}
