#include <stdio.h>


int t; i, fat = 1;

double rad, cosh = 0, x, pi = 3.141593;


void cosseno_hiperbolico(){

	printf("Digite um valor para o angulo (em °): ");
	scanf("%lf", &x);
	printf("\n");

	rad = (x * pi) / 180.0;

	for(i = 0; i < 5; i++){
		t = 2 * i;
		while(t > 1){
			fat *= t;
			t -= 1;
		}cosh += pow(rad, t) / fat;

	}printf("O cosseno hiperbólico do angulo de %.1lf é de %lf", x, cosh);

}


int main(){

	cosseno_hiperbolico();

	return 0;

}

