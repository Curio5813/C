#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; char c;

	arq = fopen("arq.txt", "w");

	if(arq){
		while(c != '0'){
			fscanf("%c", &c);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((c = getc(arq)) != EOF){
			printf("%c", c);

		}

	}fclose(arq);

	return 0;

}
