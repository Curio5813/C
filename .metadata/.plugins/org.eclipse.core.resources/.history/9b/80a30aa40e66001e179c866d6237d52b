#include <stdio.h>
#include <string.h>


int main(){

	char palavra[50], anagrama[50];

	int i, k = i, cont = 0, n1 = 0, n2 = 0, tam;

	printf("Digite uma palavra: ");
	scanf("%s", palavra);
	printf("Digite outra palavra: ");
	scanf("%s", anagrama);
	printf("\n");
	tam = strlen(palavra);

	for(i = 0; i < tam; i++){
		while(k < tam){
			if(palavra[n2] == anagrama[n1]){
				cont += 1;
				break;

			}k += 1;
			n1 += 1;

		}n2 = i;
		n1 = 0;
		k = 0;

	}if(cont == tam){
		return printf("A string %s é um anagrama da palavra '%s'.", anagrama, palavra);

	}if(cont != tam){
		printf("A string %s não é um anagrama da palavra '%s'.", anagrama, palavra);

	}

	return 0;

}

