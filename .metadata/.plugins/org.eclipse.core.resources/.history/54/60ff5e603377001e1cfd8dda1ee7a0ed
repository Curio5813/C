#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; int c;

	arq = fopen("arq.txt", "w");

	if(arq){
		printf("Escreva algo: \n");
		c = getchar();
		putchar(c);
		while((c = getchar(arq)) != '0'){
			printf("Escreva algo: ");
			c = getchar();
			putchar(c);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((c = fgetc(arq)) != EOF){
			printf("%c", c);

		}

	}fclose(arq);

	return 0;

}
