#include <stdio.h>
#include <stdlib.h>


int main(){
	FILE *arq; char ch;

	arq = fopen("arq.txt", "w");

	if(arq){
		printf("Escreva algo? \n");
		putc(ch, arq);
		getc(ch);
		while((ch = fgetc(arq)) != '0'){
			printf("Escreva algo? \n");
			putc(ch, arq);
			getc(ch);
		}

	}else{

		printf("NÃ£o achei o arquivo!");

	}fclose(arq);

	arq = fopen("arq.txt", "r");

	if(arq){
		while((ch = fgetc(arq)) != EOF){
			printf("%c", ch);

		}

	}fclose(arq);

	return 0;

}
