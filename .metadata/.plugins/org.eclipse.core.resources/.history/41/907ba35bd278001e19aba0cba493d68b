#include <stdio.h>
#include <stdlib.h>
#include <string.h>


void letras_quantas_vezes(int *soma, int *vet[26]){

	FILE *arq; int c;
	char alf[52] = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ";

	arq = fopen("texto06.txt", "r");

	if(arq){
		for(int i = 0; i < 26; i++){
			c = fgetc(arq);
			while(c != EOF){
				if(c == alf[i] || c == alf[i + 26]){
					*(soma) += 1;
				}
			}c = fgetc(arq);
			vet[i] = soma;
			soma = 0;

		}

	}else{

		printf("Arquivo nÃ£o encontrado!");



	}for(int i = 0; i < 26; i++){

		printf("A letra %c apareceu %d vezes;", alf[i], vet[i]);


	}fclose(arq);



}


int main(){

	int *soma = 0, *vet[26];

	letras_quantas_vezes(&soma, &vet[26]);

	return 0;

}
