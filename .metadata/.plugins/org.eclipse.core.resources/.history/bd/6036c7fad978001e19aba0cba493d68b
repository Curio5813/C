#include <stdio.h>
#include <stdlib.h>


int main(){

	FILE *arq1; FILE *arq2; int c; char vogal[10] = "aeiouAEIOU";

	arq2 = fopen("texto07_alt.txt", "a");

	for(int i = 0; i < 5; i++){
		if(arq1){
			arq1 = fopen("texto07.txt", "r");
			c = fgetc(arq1);
			while(c != EOF){
				if(c == vogal[i] || c == vogal[i + 10]){
					c = '*';
					fputc(c, arq2);

				}else if(c != vogal[i] || c != vogal[i + 10]){
					fputc(c, arq2);

				}c = fgetc(arq1);

			}

		}else{
			printf("Arquivo nÃ£o encontrado!");

			return 0;

		}

	}

	return 0;

}
