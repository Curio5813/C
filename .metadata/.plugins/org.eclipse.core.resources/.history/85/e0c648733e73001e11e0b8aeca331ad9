#include <stdio.h>
#include <stdlib.h>


int main(){

	int i; float r; char str[40];

	printf("Digite um numero inteiro: ");
	scanf("%d", &i);
	printf("Digite um número real: ");
	scanf("%f", &r);
	printf("Digite uma string: ");
	scanf("%s", &str);
	printf("\n");

	int *pi = &i; float *pr = &r; char *pstr = &str;

	int ti = sizeof(i); int tr = sizeof(r); int tstr = sizeof(str);

	printf("O número inteiro vale %d, seu tamanho é de %d bytes seu endereço\n"
			"de memória em inteiros é %d, e em hexadecimal é %pi\n", i, ti, &i, pi);
	printf("\n");
	printf("O número real vale %f, seu tamanho é de %d bytes seu endereço\n"
			"de memória em inteiros é %d, e em hexadecimal é %pr\n", r, tr, &r, pr);
	printf("\n");
	printf("A string é %s, seu tamanho é de %d bytes seu endereço\n"
			"de memória em inteiros é %d, e em hexadecimal é %pstr\n", r, tr, &r, pr);

	return 0;


}
