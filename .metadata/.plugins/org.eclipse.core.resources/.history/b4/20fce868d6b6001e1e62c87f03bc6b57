#include <stdio.h>
#include <stdlib.h>


int main(){

	int n;

	while((scanf("%d", &n) != EOF)){
		int cont = 1, soma = 0, unissono, meio;

		int *notas = (int*)malloc(n * sizeof(int));

		for(int i = 0; i < n; i++){
			scanf("%d", &notas[i]);
		}
		int k = 0, j = n - 1, iguais = 0;
		for(int i = 0; i < n; i++){
			soma += notas[i];
		}
		unissono = soma / n;
		if(n % 2 == 0){
			meio = (n / 2) - 1;
		}
		if(n % 2 == 1){
			meio = n / 2;
		}
		printf("%d", meio);
		if(soma % n == 0){
			while(k < meio){
				if(notas[j] == unissono){
					j -= 1;
				}
				if(notas[k] == unissono){
					k += 1;
				}
				notas[k] += 1;
				notas[j] -= 1;
				cont += 1;
			}
			printf("%d\n", cont);
			free(notas);
			notas = NULL;
		}
		else{
			printf("%d\n", -1);

		}
	}

	return 0;
}
