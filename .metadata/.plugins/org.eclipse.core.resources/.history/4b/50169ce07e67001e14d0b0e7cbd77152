#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int fracoes(){

	int p_num, p_den, q_num, q_den;

	printf("Digite o numerado e denominado da primeira fração: ");
	scanf("%d %d", &p_num, &p_den);
	printf("Digite o numerado e denominado da segunda fração: ");
	scanf("%d %d", &q_num, &q_den);

	if(p_num > p_den){

		for(int i = 2; i < p_num; i++){

			if(p_num % i == 0 && p_den % i == 0){

				p_num /= i;
				p_den /= i;

			}

		}

	}else if(p_den > p_num){

		for(int i = 2; i < p_den; i++){

			if(p_den % i == 0 && p_num % i == 0){

				p_num /= i;
				p_den /= i;

			}

		}

	}if(q_num > q_den){

		for(int i = 2; i < q_num; i++){

			if(q_num % i == 0 && q_den % i == 0){

				q_num /= i;
				q_den /= i;

			}

		}

	}else if(q_den > q_num){

		for(int i = 2; i < q_den; i++){

			if(q_den % i == 0 && q_num % i == 0){

				q_num /= i;
				q_den /= i;

			}

		}


	}printf("\n");
	printf("%d/%d e %d/%d", p_num, p_den, q_num, q_den);

}


int main(){

	fracoes();

	return 0;

}
