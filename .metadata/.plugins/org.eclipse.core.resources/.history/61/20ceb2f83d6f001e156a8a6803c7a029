#include <stdio.h>
#include <stdlib.h>


void frac(float *num, int *inteiro, float *fracao){

	int divisor = 1;

	*(inteiro) = *(num) / 1;
	while(*(num) > divisor){

		divisor *= 10;

	}printf("%d", divisor);
	*(fracao) = *(num) % divisor;


}


int main(){

	float num, fracao;

	int inteiro;

	printf("Digite um número real sem ser inteiro: ");
	scanf("%f", &num);
	printf("\n");

	frac(&num, &inteiro, &fracao);

	printf("A parte inteira é igual à %d e a fracionária igual à %f", inteiro, fracao);

}
